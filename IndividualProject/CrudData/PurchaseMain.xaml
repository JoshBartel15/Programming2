<Window x:Class="CrudData.PurchaseMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudData"
        mc:Ignorable="d"
        Title="PurchaseMain" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPurchase" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,217,0,0"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="215,132,0,0" VerticalAlignment="Top" Click="btnEdit_Click"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="360,142,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="508,117,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>
        <Label Content="Purchase" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" FontFamily="SimSun-ExtB" FontSize="36"/>

    </Grid>
</Window>
