<Window x:Class="CrudData.OwnersMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudData"
        mc:Ignorable="d"
        Title="OwnersMain" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstOwners" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,217,0,0"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="179,121,0,0" VerticalAlignment="Top" Click="btnEdit_Click"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="355,131,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="548,141,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>
        <Label Content="Owners" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="SimSun-ExtB"/>

    </Grid>
</Window>
