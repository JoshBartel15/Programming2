        <ComboBox x:Name="cmbType" HorizontalAlignment="Left" Margin="477,205,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="VIN" HorizontalAlignment="Left" Margin="80,82,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="Year" HorizontalAlignment="Left" Margin="240,89,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
