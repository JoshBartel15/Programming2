        <TextBox x:Name="txtVIN" HorizontalAlignment="Left" Margin="43,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtYear" HorizontalAlignment="Left" Margin="205,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtModel" HorizontalAlignment="Left" Margin="551,131,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
