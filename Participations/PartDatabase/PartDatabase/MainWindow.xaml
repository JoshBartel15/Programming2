<Window x:Class="PartDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstStudent" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,65,400,0" SelectionChanged="lstStudent_SelectionChanged"/>
        <ListBox x:Name="lstCourse" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,65,0,0" SelectionChanged="lstCourse_SelectionChanged"/>
        <Label Content="Student" HorizontalAlignment="Left" Margin="162,32,0,0" VerticalAlignment="Top"/>
        <Label Content="Course" HorizontalAlignment="Left" Margin="600,32,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
